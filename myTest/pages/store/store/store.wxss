/*纵向布局  */
.layout_vertical{
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}
/*横向布局  */
.layout_horizontal{
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}
.sort{
border-top:1px solid rgb(204, 204, 204);
border-bottom:1px solid rgb(204, 204, 204);
 background: #eeeeee;
 height: 30px;
 justify-content:center;
  align-items: center;
}
.layout_horizontal view{
  height: 20px;
  width:20%;
  font-size:12px;
  justify-content:center;
  display: flex;
}

